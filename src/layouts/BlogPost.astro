---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { SITE_BASE } from "../consts";

type Props = CollectionEntry<"blog">["data"];

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	number,
	showComment,
	showTitle,
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body class="prose">
		<Header />
		<main>
			{
				heroImage && (
					<img
						width={720}
						height={360}
						src={SITE_BASE.replace(/\$/, "") + heroImage}
						alt=""
					/>
				)
			}
			{ showTitle && <h1 class="title">{title}</h1> }
			<FormattedDate date={pubDate} />
			{
				updatedDate && (
					<div class="last-updated-on">
						Last updated on <FormattedDate date={updatedDate} />
					</div>
				)
			}
			<hr />
			<slot />
			{
				showComment && (
					<div
						id="utterances"
						number={number}
					/>
				)
			}
			{
				showComment && <script>
						// let theme =  localStorage.getItem('theme') || 'light';
						const scriptContainer = document.getElementById('utterances');
						const script = document.createElement('script');
						script.src = 'https://utteranc.es/client.js';
						script.async = true;
						script.setAttribute('issue-number', scriptContainer.getAttribute('number'));
						script.setAttribute('repo', 'deuscx/inori');
						script.setAttribute('theme',  theme === 'dark' ? 'gruvbox-dark' : 'github-light');
						script.crossOrigin = 'anonymous';

						scriptContainer.innerHTML = '';
						scriptContainer.appendChild(script);
					</script>
			}
		</main>
		<Footer />
	</body>
</html>
